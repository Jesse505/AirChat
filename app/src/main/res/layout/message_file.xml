<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="left" >

    <LinearLayout
        android:layout_width="60dip"
        android:layout_height="60dip"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/messgae_file_bg"
            android:layout_width="59dip"
            android:layout_height="46dip"
            android:layout_gravity="center"
            android:layout_margin="15dip"
            android:src="@drawable/file_icon_theme"
            android:visibility="gone" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content" >
        <RelativeLayout
             android:id="@+id/re1"
             android:layout_width="200dp"
        	 android:layout_height="wrap_content">
            <ImageView
	            android:id="@+id/message_file_iamge"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentLeft="true"
	            android:layout_alignParentTop="true"
	            android:background="@drawable/file" />
            <TextView
	            android:id="@+id/message_file_name"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentRight="true"
	            android:layout_alignParentTop="true"
	           android:paddingBottom="2dip"
	            android:paddingLeft="5dip"
	            android:layout_marginTop="5dip"
	            android:paddingTop="5dip"
	            android:maxWidth="140dp"
	            android:singleLine="true"/> 
        </RelativeLayout>
        <RelativeLayout
             android:id="@+id/re2"
             android:layout_below="@+id/re1"
             android:layout_width="200dp"
        	 android:layout_height="wrap_content"
        	 android:layout_marginTop="5dp">
           <ProgressBar 
	            android:id="@+id/message_file_progressbar"            
	            android:layout_width="fill_parent"
	            android:layout_height="5dp"  
	            style="?android:attr/progressBarStyleHorizontal"
	            android:progressDrawable="@drawable/progressbar_horizontal"
	            android:max="100"/>
        </RelativeLayout>
        <RelativeLayout
             android:id="@+id/re3"
             android:layout_below="@+id/re2"
             android:layout_width="200dp"
        	 android:layout_height="wrap_content"
        	 android:layout_marginTop="10dp">
            <TextView
	            android:id="@+id/message_file_state"            
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentLeft="true"      
	            android:layout_alignParentBottom="true"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>