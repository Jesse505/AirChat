<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_call_list_screen" >
   <include 
       android:id="@+id/more_personal_info"
       layout="@layout/include_tab_more_tobar"/> 
  
   <RelativeLayout       
       android:gravity="center"
       android:layout_width="fill_parent"
       android:layout_height="fill_parent"
       android:layout_centerVertical="true"
       android:layout_marginBottom="100dp"
       
       > 
    <TextView 
        android:id="@+id/txt_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"    
        android:textSize="18sp"     
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textColor="@color/white"/>
    
    <TextView 
        android:id="@+id/txt_user_number"
        android:layout_below="@+id/txt_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:textSize="18sp"            
        android:paddingLeft="5dp"
        android:textColor="@color/white"/>
    <TextView 
        android:id="@+id/txt_user_ip"
        android:layout_below="@+id/txt_user_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"  
        android:textSize="18sp"         
        android:paddingLeft="5dp"
        android:textColor="@color/white"/>
   
    </RelativeLayout> 
    

</LinearLayout>